<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="TMS">
      <description>
        Persistence unit for TMS database layer.
      </description>

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.elephasvacation.tms.web.entity.Customer</class>
        <class>com.elephasvacation.tms.web.entity.Employee</class>
        <class>com.elephasvacation.tms.web.entity.Credential</class>
    </persistence-unit>
</persistence>
